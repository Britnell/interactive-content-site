---
import { ViewTransitions } from "astro:transitions";
import Switcher from "../storyblok/switcher.astro";
import page from "../page.json";

const pageData = structuredClone(page);
pageData.body[1].component = "teaser-alpine";
pageData.body[3].component = "grid-alpine";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alpine Demo</title>
    <ViewTransitions />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
  </head>
  <style is:global>
    body {
      background: black;
      color: white;
    }
  </style>
  <body>
    <header class="flex justify-between px-8 py-2">
      <a href="/" class="text-2xl font-bold"> Alpine Demo</a>
      <a href="#" class="font-mono"> Profile</a>
    </header>
    <main>
      <Switcher blok={pageData} />
    </main>
    <footer>
      <p>This is the alpine demo (w Astro components)</p>
    </footer>
  </body>
</html>
